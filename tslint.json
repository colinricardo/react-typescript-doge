{
  "extends": ["tslint-config-prettier"],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "quotemark": [true, "single"]
  }
}
